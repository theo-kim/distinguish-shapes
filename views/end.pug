extends layout

//- Main content
block content
	div#welcome
		h4(style="text-align: center") Please stop the clock in order to select the round to be used for payment.
		include includes/clock.pug


	script.
		var submit = function() {
			document.querySelector('#stop').removeEventListener("click", submit);
			setTimeout(() => {
				var roll = (parseInt(document.querySelector("#mi").innerHTML)) - 1;
				$.post('/api/end', {roll: roll}, () => {setTimeout(() => location = "/result", 1000)});
			}, 1000)
		};

		document.querySelector('#start').style.display = "none";
		document.querySelector('#stop').addEventListener("click", submit);
