mixin pentagon(rot)
	svg(xmlns="http://www.w3.org/2000/svg", xmlns:xlink="http://www.w3.org/1999/xlink" ,width="80",height="80",viewbox="0 0 105 105",style="padding: 10px")
		polygon(points="52,2 102,42 82,102 22,102 2,42", style="stroke:#000;fill:none", transform="rotate(" + rot + " 52.5 52.5)")
	//- 50% 0%, 100% 40%, 80% 100%, 20% 100%, 0% 40%

