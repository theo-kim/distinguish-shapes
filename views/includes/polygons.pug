	//- (30% 0, 70% 0, 100% 30%, 100% 70%, 70% 100%, 30% 100%, 0 70%, 0 30

mixin shape(name)
	case name
		when "five"
			+pentagon(Math.round(Math.random() * 360))
		when "six"
			+hexagon(Math.round(Math.random() * 360))
		when "seven"
			+septagon(Math.round(Math.random() * 360))
		when "eight"
			+octogon(Math.round(Math.random() * 360))
		when "nine"
			+nonagon(Math.round(Math.random() * 360))
		when "ten"
			+decagon(Math.round(Math.random() * 360))