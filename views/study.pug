extends layout

//- Main content
block content
	include includes/test.pug
	div#flash(style="position:absolute;top:0; left:0;bottom: 0;right:0; background:#000;display:block")

	div#welcome
		h4(style="text-align: center") Round <b>#{round}</b> of <b>#{settings.rounds}</b>
		+board(settings, type)
				
	script.
		if (#{changed}) alert("The Payout Table Has Changed.")
		var block = false;

		function advance() {
			var curr = parseInt($.cookie("round"));
			$.cookie("round", curr + 1);
			location.reload();
		}

		var actions = document.querySelectorAll(".actions");

		var reference = [ "A", "B", "C" ];

		var payouts = nums;

		var maxShape = (Math.max.apply(Math, polygon_numbers.slice(1, -1)));
		maxShape = polygon_numbers.slice(1, -1).indexOf(maxShape)

		for (var i = 0; i < actions.length; ++i) {
			actions[i].addEventListener("click", function(e) {
				var data = {
					selection: e.target.dIndex,
					payout: payouts[e.target.dIndex][maxShape].payout,
					polygons: JSON.stringify(polygon_numbers),
					mudding: mudding,
					table: #{type}
				}
				if (!block) {
					block = true;
					$.post('/api/round', data, advance);
				}
			}, false);
			actions[i].dIndex = i;
		}